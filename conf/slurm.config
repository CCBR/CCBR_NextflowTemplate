
executor {

    $slurm {
        queue = 'norm'
        queueSize = 200
        pollInterval = '2 min'
        queueStatInterval = '5 min'
        submitRateLimit = '6/1min'
        retry.maxAttempts = 1
    }
}

process {
    executor = 'slurm'
    maxRetries = 1

    clusterOptions = ' --gres=lscratch:200 '

    stageInMode = 'symlink'
    stageOutMode = 'rsync'

    // for running pipeline on group sharing data directory, this can avoid inconsistent files timestamps
    cache = 'lenient'
}
